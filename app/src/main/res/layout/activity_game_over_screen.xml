<!-- game_over_screen.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/game_over_background_color">

    <ImageView
        android:id="@+id/image_game_over"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:alpha="0"
    android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/text_game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over!"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_below="@id/image_game_over"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:layout_below="@id/text_game_over"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:layout_below="@id/button_restart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
